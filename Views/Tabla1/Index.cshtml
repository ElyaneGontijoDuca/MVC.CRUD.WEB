@model List <MVCCRUDweb.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Dados do Usuário";
}

<h2>@ViewBag.Title</h2>
<!--CRIACAO DE UM BOTAO-->
<div class="row" style="text-align:right;padding:5px;">
   <a href="~/Tabla1/Nuevo" class="btn btn-primary">Nuevo</a>
</div>

<!--CRIACAO DE UMA GRID-->
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
               <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Nascimiento</th>
                <th></th>
            </tr>
            @foreach(var oElemento in Model)
            {  
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Correo</td>
                    <td>@oElemento.Fecha_nascimento</td>
                    <td>
                        <a class="btn btn-default" href="~/Tabla1/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Tabla1/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>
                </tr>    

            }
        </table>
    </div>

</div>